extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box


        h1= projects.project_name
        p= projects.description

      //- Right sidebar that lists the technologies used for that project
      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in projects.technologies
            li= technology

        //- Links for the projects live webpage and the link to the github repo
        a.btn-link(href=projects.live_link, target='_blank') Live Demo
        a.btn-link(href=projects.github_link, target='_blank') GitHub Repo

    //- Project Images
    .project-img-box.box
      img.project-img(src=projects.image_urls.project_page[0], alt=`An image of ${projects.project_name}`)

      img.project-img(src=projects.image_urls.project_page[1], alt=`An image of ${projects.project_name}`)

      //- If statements get rid of the box outline for project pages that don't have 3 or 4 images
      if(projects.image_urls.project_page[2])
        img.project-img(src=projects.image_urls.project_page[2], alt=`An image of ${projects.project_name}`)

      if(projects.image_urls.project_page[3])
        img.project-img(src=projects.image_urls.project_page[3], alt=`An image of ${projects.project_name}`)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
